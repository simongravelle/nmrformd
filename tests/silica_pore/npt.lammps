# LAMMPS npt input file

units real
atom_style full
bond_style harmonic
angle_style harmonic
boundary p p p
pair_style lj/cut/tip4p/long 1 2 1 1 0.105 10.0
kspace_style pppm/tip4p 1.0e-4
pair_modify mix arithmetic tail yes
neighbor 2.0 bin
#neigh_modify delay 0 every 1 check yes

read_data build/data.lammps
include PARM.lammps

group H2O type 1 2
group NaCl type 3 4
group SiOH type 5 6 7 8

fix mymom SiOH momentum 1 linear 1 1 1

#delete_atoms group H2O

dump dp1 all atom 500 dump.lammpstrj

thermo 100

fix myshk H2O shake 1.0e-4 200 0 b 1 a 1
fix mynvt all nvt temp 1 1 1

timestep 0.001
run 2000

fix mynvt all nvt temp 1 1 10

timestep 0.01
run 2000

fix mynvt all nvt temp 1000 1000 10

timestep 0.1
run 1000
unfix mynvt

fix mynvt all nvt temp 1000 1000 100

timestep 1.0
run 5000
unfix mynvt

fix mynpt all npt temp 300 300 100 x 1 1 1000 y 1 1 1000 z 1000 1000 1000

run 5000

fix mynpt all npt temp 300 300 100 aniso 1 1 1000

run 5000
write_data first.data


